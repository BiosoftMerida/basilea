.row
  .col-md-12
    %h3
      Criterio Florístico
.row.form-horizontal
  .col-sm-4
    .form-group
      = label_tag :especie, class: 'col-sm-4 control-label' do
        = radio_button_tag :especie, true, checked: true
        Especie:
      .col-sm-8
        = select :especie, :especie,  options_from_collection_for_select(current_user.empresa_forestal.especies, :id, :nombre_comun), {include_blank: 'Todas las Especies'}, {class: 'form-control', id: 'especie_select'}
  .col-sm-4
    .form-group
      = label_tag :grupo_especie, class: 'col-sm-4 control-label' do
        = radio_button_tag :especie, false
        Grupo de Especie:
      .col-sm-8
        .grupo_especies_criterio
          %table.table.table-striped#table_grupo_especies
            %thead
              %th= check_box_tag :all, true , false, id: 'checkall_ge'
              %th Código
              %th Nombre
            %tbody#tbody_checkboxes
              = collection_check_boxes :grupo_especie, :grupo_especie_id, GrupoEspecie.all.order(:codigo), :id, :codigo do |g|
                %tr
                  %td
                    = g.check_box
                  %td
                    = g.label
                  %td
                    = g.object.nombre
  .col-sm-4
    .form-group
      = label_tag :calidad, class: 'col-sm-4 control-label' do
        Calidad de Fuste:
      .col-sm-8
        .calidad_fuste_criterio
          %table.table.table-striped
            %thead
              %th= check_box_tag :all, true , false, id: 'checkall_cf', name: 'calidad'
              %th Calidad
            %tbody#tbody_calidad_checks
              %tr
                %td= check_box_tag :buena, 0, true, name: 'calidad'
                %td Buena
              %tr
                %td= check_box_tag :regular, 1, true, name: 'calidad'
                %td Regular
              %tr
                %td= check_box_tag :mala, 2, true, name: 'calidad'
                %td Mala
  .col-sm-4
    .form-group
      = label_tag :vitalidad, class: 'col-sm-4 control-label' do
        Vitalidad de Copa:
      .col-sm-8
        .vitalidad_copa_criterio
          %table.table.table-striped
            %thead
              %th= check_box_tag :all, true , false, id: 'checkall_vc', name: 'vitalidad'
              %th Vitalidad
            %tbody#tbody_vitalidad_checks
              %tr
                %td= check_box_tag :sano_completo, 0, true, name: 'vitalidad'
                %td Sano completo
              %tr
                %td= check_box_tag :sano_incompleto, 1, true, name: 'vitalidad'
                %td Sano incompleto
              %tr
                %td= check_box_tag :no_simetrico, 2, true, name: 'vitalidad'
                %td No simétrico




