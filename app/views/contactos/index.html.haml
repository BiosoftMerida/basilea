                      %tr

                        %td= contacto.nombres

                        %td= contacto.apellidos

                        %td= contacto.doc_identidad

                        %td= contacto.email

                        %td= contacto.telefono

                        %td= contacto.iglesia

                        %td= contacto.estado.nombre

                        %td= contacto.profesion.nombre

                        %td= contacto.ministerio.nombre

                        %td
